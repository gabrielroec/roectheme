    (function () {
      var variantRendered = false;

      function renderTemplateContent() {
        if (variantRendered) return
        const template = document.getElementById("shogun-ab-variant-body");
        document.write(template.innerHTML);
        variantRendered = true;
      }

      if (window.SHOGUN_ABC_CACHED_VARIANT_BODY) {
        document
          .getElementById("shogun-ab-variant-body")
          .replaceWith(window.SHOGUN_ABC_CACHED_VARIANT_BODY);
      }

      renderTemplateContent()
    })()
  </script>

